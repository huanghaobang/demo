<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    

    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"

        android:text="安全感已成功接到您的求助"
        android:textSize="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/sound_lu"
            android:scaleType="fitXY"
            android:layout_marginLeft="40dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="录音正在实时上传至平台"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            />


    </LinearLayout>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:src="@drawable/kepp2"
        android:scaleType="fitXY"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="30dp"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="虚假报警将承担法律责任，"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        android:textSize="21dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请慎用110"
        android:layout_marginLeft="140dp"
        android:textSize="21dp"
        />

    <ImageButton
        android:id="@+id/call_110"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:src="@drawable/call_110"
        android:scaleType="fitXY"
        android:background="#0000"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="50dp"
        />

    <ImageButton
        android:id="@+id/call_friend1"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:src="@drawable/pp1"
        android:scaleType="fitXY"
        android:background="#0000"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="30dp"
        />

    <ImageButton
        android:id="@+id/i_am_safe"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:src="@drawable/pp2"
        android:scaleType="fitXY"
        android:background="#0000"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"

        />

</LinearLayout>
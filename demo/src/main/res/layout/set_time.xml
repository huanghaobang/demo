<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="#87CEFF">

        <Button
            android:id="@+id/add_friend"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="280dp"
            android:background="#0000"
            android:text="添加同伴"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="70dp"
            android:text="需要安全感保护您多久？"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="200dp"
            android:text="设定防护时长"
            android:textColor="@color/white"
            android:textSize="25dp"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <View
            android:layout_width="60dp"
            android:layout_marginTop="150dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:background="#aa000000" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:fillViewport="true"
        android:scrollbars="none"

        android:layout_marginTop="60dp"
        >

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"


        >
        <TextView
            android:textSize="50sp"
            android:text="00: 00: 10"
            android:background="#0000"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="50sp"
            android:text="00: 00: 15"
            android:background="#0000"

            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" /> 
        <TextView
            android:textSize="50sp"
            android:text="00: 00: 30"
            android:background="#0000"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="50sp"
            android:text="00: 01: 00"
            android:background="#0000"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" /> 
        <TextView
            android:textSize="50sp"
            android:text="00: 05: 00"
            android:background="#0000"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="50sp"
            android:text="00: 10: 00"
            android:background="#0000"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" /> 
    </LinearLayout>

</ScrollView>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"

        >

    <ImageButton
        android:id="@+id/startsave"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="20dp"
        android:background="#0000"

        android:textColor="@color/white"
        android:src="@drawable/bt_blue"

        />
    <TextView
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:text="开始保护"
        android:textSize="35dp"
        android:textColor="@color/white"
        android:layout_marginLeft="140dp"

        android:layout_marginTop="30dp"


            />
    </RelativeLayout>




</LinearLayout>



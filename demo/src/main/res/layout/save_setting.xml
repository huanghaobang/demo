<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageButton
        android:id="@+id/re_set"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/return_123"
        android:scaleType="fitXY"
        android:background ="#0000"
        android:layout_marginLeft="10dp"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"

         >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/add_1"
            android:scaleType="fitXY"
            />

        <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="自定义模式创建"
           android:textStyle="bold"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="20dp"
           android:textSize="20dp"
           />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/finish1"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="8dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/call_bell"
        android:scaleType="fitXY"
        android:layout_marginLeft="40dp"

        />
    <ImageButton
        android:id="@+id/ibt1"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:src="@drawable/on"
        android:scaleType="fitXY"
        android:background ="#0000"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/phone_call"
        android:scaleType="fitXY"
        android:layout_marginLeft="90dp"

        />
    <ImageButton
        android:id="@+id/ibt2"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:src="@drawable/on"
        android:scaleType="fitXY"
        android:background ="#0000"
        android:layout_marginLeft="20dp"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/flash_light"
            android:scaleType="fitXY"
            android:layout_marginLeft="40dp"

            />
        <ImageButton
            android:id="@+id/ibt3"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@drawable/on"
            android:scaleType="fitXY"
            android:background ="#0000"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/save_clock"
            android:scaleType="fitXY"
            android:layout_marginLeft="90dp"

            />
        <ImageButton
            android:id="@+id/ibt4"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@drawable/on"
            android:scaleType="fitXY"
            android:background ="#0000"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/e_mail"
            android:scaleType="fitXY"
            android:layout_marginLeft="40dp"

            />
        <ImageButton
            android:id="@+id/ibt5"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@drawable/on"
            android:scaleType="fitXY"
            android:background ="#0000"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/save_sound"
            android:scaleType="fitXY"
            android:layout_marginLeft="90dp"

            />
        <ImageButton
            android:id="@+id/ibt6"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@drawable/on"
            android:scaleType="fitXY"
            android:background ="#0000"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="30dp"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#aa000000" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"

        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/em"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="情景模式库"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
          />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sss1"

        />




</LinearLayout>